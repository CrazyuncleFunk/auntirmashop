@model IEnumerable<Aunt_Irma_Shop.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Category Manager</h1>

<p class="mb-4">
    <a asp-action="Create" class="btn btn-success float-right">Create New</a>
</p>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr style="width:100%;">
                <td style="width:25%;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="width:25%;"></td>
                <td style="width:25%;"></td>
                <td  style="width:25%;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="font-weight-bold">No Categories Exist</p>
}
