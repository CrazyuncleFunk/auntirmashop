@model Aunt_Irma_Shop.Models.ViewModels.OrderDetailsViewModel
@{
    ViewData["Title"] = "Confirm";
}

<br />
<div class="background-white">
    <div class="row px-3">
        <div class="col-8">
            <h2 class="text-info">Order Confirmed</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success form-control">New Order</a>
        </div>
    </div>
    @if (Model.OrderHeader != null)
    {
        <div class="p-3" style="color:maroon">
            Your Order Has Been Confirmed. Please See The Order Summary Below.
            <br />
            Feel Free To Contact us if You Have Any Questions.
        </div>
        <partial name="_InduvidualOrderDetails" model="Model" />
    }
    else
    {
        <div class="text-danger">Error.... Please try again.</div>
    }
</div>