@model Aunt_Irma_Shop.Models.ShoppingCart

@{
    ViewData["Title"] = "Details";
}


<form method="post">
    <div>

        <div class="row">
            <div class="col-md-3 col-8 offset-2 offset-md-0">
                @if (Model.Item.Picture == null)
                {

                    <img src="~/images/AuntIrmaLogo.JPEG" style="max-height:100%; width:100%;" />
                }
                else
                {
                    var base64 = Convert.ToBase64String(Model.Item.Picture);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);

                    <img src="@imgsrc" style="max-height:100%; width:100%;" />
                }
            </div>
            <br />
            <div class="mt-md-3 col-md-7 offset-md-1 col-sm-12 float-right">
                <h3>@Html.DisplayFor(model => model.Item.Name)</h3>
                @Html.Raw(Model.Item.Description)
            </div>
        </div>
        <div class="row">
            <label for="price" class="col-2 offset-8">
                @Html.DisplayNameFor(model => model.Item.Price)
            </label>
            <div name="price" class="col-2">
                @Html.DisplayFor(model => model.Item.Price)
            </div>
        </div>





    </div>
    <div class="row">
        <input asp-for="Count" type="number" value="1" class="form-control offset-1 col-4 col-md-2 offset-md-5 col-lg-1 offset-lg-6" min="1" />
        <button type="submit" value="Add To Cart" class="col-6   btn btn-success col-md-4 col-lg-2 ">Add To Basket</button>
        <a asp-action="Index" class="btn btn-primary col-10 offset-1 offset-md-5 col-md-6 offset-lg-0 col-lg-2">Back to List</a>
    </div>
    <input asp-for="ItemId" hidden />
</form>
@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            toolbar: "undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist",
            menubar: 'file edit format',
            readonly: 1
        });</script>
    <script>tinymce.init({ selector: 'textarea' });</script>

}